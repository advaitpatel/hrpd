<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.depaul.csc595.jarvis" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".rewards.RewardsActivity"
            android:label="@string/title_activity_rewards"
            android:parentActivityName=".main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".profile.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".prevention.PreventionActivity"
            android:label="@string/title_activity_prevention"
            android:parentActivityName=".main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".inventory.AppliancesActivity"
            android:label="@string/title_activity_appliances"
            android:parentActivityName=".main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".profile.LogInActivity"
            android:label="@string/profile_signin"
            android:parentActivityName=".main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.depaul.csc595.jarvis.main.MainActivity" />
        </activity>
        <activity
            android:name=".profile.SignUpActivity"
            android:label="@string/profile_signup"
            android:parentActivityName=".main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.depaul.csc595.jarvis.main.MainActivity" />
        </activity>
        <activity
            android:name=".detection.RegisterProducts"
            android:label="@string/title_activity_register_products" >
        </activity>
        <activity
            android:name=".detection.AddTriggers"
            android:label="@string/title_activity_add_triggers" >
        </activity>
        <activity
            android:name=".detection.WhenThisHappens"
            android:label="@string/title_activity_when_this_happens" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detection.TakeThisAction"
            android:label="@string/title_activity_take_this_action" >
        </activity>
    </application>

</manifest>
