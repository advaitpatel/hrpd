<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/name_of_action"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextHeading.Medium.Black"
            android:text="Turn On/Off Reminders"/>

    </LinearLayout>


    <include layout="@layout/border_thin_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextHeading.Medium.Blue"
            android:text="FRIDGE"
            />
        <include layout="@layout/toggle_off_button"

            />


    </LinearLayout>


    <include layout="@layout/border_thin_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextHeading.Medium.Blue"
            android:text="AIR CONDITIONER"/>
        />
        <include layout="@layout/toggle_on_button"/>


    </LinearLayout>

    <include layout="@layout/border_thin_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextHeading.Medium.Blue"
            android:text="SMOKE ALARM"/>
        />

        <include layout="@layout/toggle_on_button"/>

    </LinearLayout>

    <include layout="@layout/border_thin_gray"/>





</LinearLayout>