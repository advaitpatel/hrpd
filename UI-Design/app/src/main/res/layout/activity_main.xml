<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false"
    android:orientation="vertical"
    >

   <include layout="@layout/app_name"
       android:layout_width="fill_parent"
       android:layout_height="0dp"
       android:layout_weight="2"
       />



    <LinearLayout
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="0dp" android:layout_weight="2" android:gravity="top">

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/splash_button_top_margin"
            android:layout_marginRight="@dimen/splash_button_side_margin"
            android:text="@string/login"
            android:id="@+id/button_login"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:layout_marginTop="@dimen/splash_button_top_margin"
            android:layout_marginLeft="@dimen/splash_button_side_margin"
            android:id="@+id/button_signup" />



    </LinearLayout>




</LinearLayout>
